{
  "openapi": "3.0.3",
  "info": {
    "title": "CodeInfo2 API",
    "version": "0.0.0"
  },
  "paths": {
    "/codex/device-auth": {
      "post": {
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "target": {
                    "type": "string",
                    "enum": ["chat", "agent"]
                  },
                  "agentName": {
                    "type": "string"
                  }
                },
                "required": ["target"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Codex device auth completed",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string"
                    },
                    "target": {
                      "type": "string"
                    },
                    "agentName": {
                      "type": "string"
                    },
                    "rawOutput": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/flows/{flowName}/run": {
      "post": {
        "parameters": [
          {
            "name": "flowName",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": false,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "conversationId": {
                    "type": "string"
                  },
                  "working_folder": {
                    "type": "string"
                  },
                  "resumeStepPath": {
                    "type": "array",
                    "items": {
                      "type": "integer",
                      "minimum": 0
                    }
                  },
                  "customTitle": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "202": {
            "description": "Flow run started"
          }
        }
      }
    },
    "/tools/ast-list-symbols": {
      "post": {
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "repository": {
                    "type": "string"
                  },
                  "kinds": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "limit": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 200
                  }
                },
                "required": ["repository"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "AST symbols",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "symbols": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "symbolId": { "type": "string" },
                          "root": { "type": "string" },
                          "relPath": { "type": "string" },
                          "fileHash": { "type": "string" },
                          "language": { "type": "string" },
                          "kind": { "type": "string" },
                          "name": { "type": "string" },
                          "container": { "type": "string" },
                          "range": {
                            "type": "object",
                            "properties": {
                              "start": {
                                "type": "object",
                                "properties": {
                                  "line": { "type": "integer" },
                                  "column": { "type": "integer" }
                                },
                                "required": ["line", "column"]
                              },
                              "end": {
                                "type": "object",
                                "properties": {
                                  "line": { "type": "integer" },
                                  "column": { "type": "integer" }
                                },
                                "required": ["line", "column"]
                              }
                            },
                            "required": ["start", "end"]
                          }
                        },
                        "required": [
                          "symbolId",
                          "root",
                          "relPath",
                          "fileHash",
                          "language",
                          "kind",
                          "name",
                          "range"
                        ]
                      }
                    }
                  },
                  "required": ["symbols"]
                }
              }
            }
          },
          "400": {
            "description": "Validation failed",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": { "type": "string" },
                    "details": {
                      "type": "array",
                      "items": { "type": "string" }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Repo not found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": { "type": "string" }
                  }
                }
              }
            }
          },
          "409": {
            "description": "AST index required",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": { "type": "string" },
                    "message": { "type": "string" },
                    "repository": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/tools/ast-find-definition": {
      "post": {
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "repository": { "type": "string" },
                  "symbolId": { "type": "string" },
                  "name": { "type": "string" },
                  "kind": { "type": "string" }
                },
                "required": ["repository"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "AST definition",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "symbol": {
                      "anyOf": [
                        { "type": "null" },
                        {
                          "type": "object",
                          "properties": {
                            "symbolId": { "type": "string" },
                            "root": { "type": "string" },
                            "relPath": { "type": "string" },
                            "fileHash": { "type": "string" },
                            "language": { "type": "string" },
                            "kind": { "type": "string" },
                            "name": { "type": "string" },
                            "container": { "type": "string" },
                            "range": {
                              "type": "object",
                              "properties": {
                                "start": {
                                  "type": "object",
                                  "properties": {
                                    "line": { "type": "integer" },
                                    "column": { "type": "integer" }
                                  },
                                  "required": ["line", "column"]
                                },
                                "end": {
                                  "type": "object",
                                  "properties": {
                                    "line": { "type": "integer" },
                                    "column": { "type": "integer" }
                                  },
                                  "required": ["line", "column"]
                                }
                              },
                              "required": ["start", "end"]
                            }
                          },
                          "required": [
                            "symbolId",
                            "root",
                            "relPath",
                            "fileHash",
                            "language",
                            "kind",
                            "name",
                            "range"
                          ]
                        }
                      ]
                    }
                  },
                  "required": ["symbol"]
                }
              }
            }
          },
          "400": {
            "description": "Validation failed",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": { "type": "string" },
                    "details": {
                      "type": "array",
                      "items": { "type": "string" }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Repo not found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": { "type": "string" }
                  }
                }
              }
            }
          },
          "409": {
            "description": "AST index required",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": { "type": "string" },
                    "message": { "type": "string" },
                    "repository": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/tools/ast-find-references": {
      "post": {
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "repository": { "type": "string" },
                  "symbolId": { "type": "string" },
                  "name": { "type": "string" },
                  "kind": { "type": "string" }
                },
                "required": ["repository"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "AST references",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "references": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "relPath": { "type": "string" },
                          "range": {
                            "type": "object",
                            "properties": {
                              "start": {
                                "type": "object",
                                "properties": {
                                  "line": { "type": "integer" },
                                  "column": { "type": "integer" }
                                },
                                "required": ["line", "column"]
                              },
                              "end": {
                                "type": "object",
                                "properties": {
                                  "line": { "type": "integer" },
                                  "column": { "type": "integer" }
                                },
                                "required": ["line", "column"]
                              }
                            },
                            "required": ["start", "end"]
                          },
                          "symbolId": { "type": "string" }
                        },
                        "required": ["relPath", "range"]
                      }
                    }
                  },
                  "required": ["references"]
                }
              }
            }
          },
          "400": {
            "description": "Validation failed",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": { "type": "string" },
                    "details": {
                      "type": "array",
                      "items": { "type": "string" }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Repo not found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": { "type": "string" }
                  }
                }
              }
            }
          },
          "409": {
            "description": "AST index required",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": { "type": "string" },
                    "message": { "type": "string" },
                    "repository": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/tools/ast-call-graph": {
      "post": {
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "repository": { "type": "string" },
                  "symbolId": { "type": "string" },
                  "depth": { "type": "integer", "minimum": 1 }
                },
                "required": ["repository", "symbolId"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "AST call graph",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "nodes": {
                      "type": "array",
                      "items": { "type": "object" }
                    },
                    "edges": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "root": { "type": "string" },
                          "relPath": { "type": "string" },
                          "fileHash": { "type": "string" },
                          "fromSymbolId": { "type": "string" },
                          "toSymbolId": { "type": "string" },
                          "type": { "type": "string" }
                        },
                        "required": [
                          "root",
                          "relPath",
                          "fileHash",
                          "fromSymbolId",
                          "toSymbolId",
                          "type"
                        ]
                      }
                    }
                  },
                  "required": ["nodes", "edges"]
                }
              }
            }
          },
          "400": {
            "description": "Validation failed",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": { "type": "string" },
                    "details": {
                      "type": "array",
                      "items": { "type": "string" }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Repo not found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": { "type": "string" }
                  }
                }
              }
            }
          },
          "409": {
            "description": "AST index required",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": { "type": "string" },
                    "message": { "type": "string" },
                    "repository": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/tools/ast-module-imports": {
      "post": {
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "repository": { "type": "string" },
                  "relPath": { "type": "string" }
                },
                "required": ["repository"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "AST module imports",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "modules": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "relPath": { "type": "string" },
                          "imports": {
                            "type": "array",
                            "items": {
                              "type": "object",
                              "properties": {
                                "source": { "type": "string" },
                                "names": {
                                  "type": "array",
                                  "items": { "type": "string" }
                                }
                              },
                              "required": ["source", "names"]
                            }
                          }
                        },
                        "required": ["relPath", "imports"]
                      }
                    }
                  },
                  "required": ["modules"]
                }
              }
            }
          },
          "400": {
            "description": "Validation failed",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": { "type": "string" },
                    "details": {
                      "type": "array",
                      "items": { "type": "string" }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Repo not found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": { "type": "string" }
                  }
                }
              }
            }
          },
          "409": {
            "description": "AST index required",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": { "type": "string" },
                    "message": { "type": "string" },
                    "repository": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
