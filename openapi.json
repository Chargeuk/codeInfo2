{
  "openapi": "3.0.3",
  "info": {
    "title": "CodeInfo2 API",
    "version": "0.0.0"
  },
  "paths": {
    "/codex/device-auth": {
      "post": {
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "target": {
                    "type": "string",
                    "enum": ["chat", "agent"]
                  },
                  "agentName": {
                    "type": "string"
                  }
                },
                "required": ["target"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Codex device auth completed",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string"
                    },
                    "target": {
                      "type": "string"
                    },
                    "agentName": {
                      "type": "string"
                    },
                    "rawOutput": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/flows/{flowName}/run": {
      "post": {
        "parameters": [
          {
            "name": "flowName",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": false,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "conversationId": {
                    "type": "string"
                  },
                  "working_folder": {
                    "type": "string"
                  },
                  "resumeStepPath": {
                    "type": "array",
                    "items": {
                      "type": "integer",
                      "minimum": 0
                    }
                  },
                  "customTitle": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "202": {
            "description": "Flow run started"
          }
        }
      }
    }
  }
}
