PORT=5010
# Adjust CORS origins if needed; use .env.local for private overrides
LMSTUDIO_BASE_URL=http://host.docker.internal:1234
#  CHROMA_URL=http://chroma:8000
CHROMA_URL=http://host.docker.internal:8000
MCP_PORT=5011 # Codex-only MCP JSON-RPC port
INGEST_COLLECTION=ingest_vectors
INGEST_ROOTS_COLLECTION=ingest_roots
INGEST_FLUSH_EVERY=20
MONGO_URI=mongodb://host.docker.internal:27517/db?directConnection=true
INGEST_EXCLUDE=node_modules,.git,dist,build,coverage,logs,vendor,*.log,*.min.js,package-lock.json,yarn.lock,pnpm-lock.yaml
INGEST_INCLUDE=ts,tsx,js,jsx,mjs,cjs,json,jsonc,md,mdx,txt,py,java,kt,kts,go,rs,rb,php,cs,cpp,cc,c,h,hpp,swift,scala,clj,cljs,edn,sh,bash,zsh,ps1,yaml,yml,toml,ini,cfg,env,sql,tf,tfvars,dart,vue,html,css,scss,sass,less,xml,hs,lhs,r,erl,ex,exs,elm,tfbackend,makefile,dockerfile,Terrafile,dockerignore,.dockerignore,gitattributes,gitignore,example,template,tmpl,drawio,hcl,mod,sum,cucumber,feature,crt,pem,key,npmrc,yarnrc,pnpmfile,gradle,gradle.kts,properties,prettierignore,stylelintrc,eslintrc,babelrc,jshintrc,htaccess,htpasswd,prettierrc,local
LOG_LEVEL=info
LOG_BUFFER_MAX=5000
LOG_MAX_CLIENT_BYTES=32768
LOG_FILE_ROTATE=true

LOG_LEVEL=debug

LOG_FILE_PATH=../logs/server.log
CODEINFO_CODEX_HOME=../codex
CODEINFO_CODEX_AGENT_HOME=../codex_agents
AGENTS_MCP_PORT=5012
CODEINFO_CODEX_WORKDIR=${HOME}/Documents/dev
Codex_sandbox_mode=danger-full-access
Codex_approval_policy=on-failure
Codex_reasoning_effort=high
Codex_network_access_enabled=true
Codex_web_search_enabled=true
Codex_model_list=gpt-5.1-codex-max,gpt-5.1-codex-mini,gpt-5.1,gpt-5.2,gpt-5.2-codex

# Retrieval cutoff defaults (distance <= cutoff kept; lower is better)
# CODEINFO_RETRIEVAL_DISTANCE_CUTOFF=1.4
# CODEINFO_RETRIEVAL_CUTOFF_DISABLED=false
# CODEINFO_RETRIEVAL_FALLBACK_CHUNKS=2

# Tool payload caps (characters)
# CODEINFO_TOOL_MAX_CHARS=40000
# CODEINFO_TOOL_CHUNK_MAX_CHARS=5000

# Host path where ingest data is mounted; used to rewrite /data paths for tool responses
HOST_INGEST_DIR=${CODEINFO_CODEX_WORKDIR}
